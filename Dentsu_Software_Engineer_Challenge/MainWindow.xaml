<Window x:Class="Dentsu_Software_Engineer_Challenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dentsu_Software_Engineer_Challenge"
        mc:Ignorable="d"
        Title="Ad Budget Optimizer" Height="450" Width="800">
        <Grid VerticalAlignment="Top" HorizontalAlignment="Center" ShowGridLines="True" Width="400" Height="Auto">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                </Grid.RowDefinitions>
                
                <TextBlock Name="textBlock1" TextWrapping="Wrap">Entry 1</TextBlock>
                <TextBox Grid.ColumnSpan="1" Grid.Column="1" Grid.Row="0" x:Name="NumericTextBox" PreviewTextInput="NumericTextEntry" DataObject.Pasting="NumericTextPasting" />
                <TextBlock Grid.Column="0" Grid.Row="1"  Name="textBlock2" TextWrapping="Wrap">Entry 2</TextBlock>
                <TextBox Grid.ColumnSpan="1" Grid.Column="1" Grid.Row="1" x:Name="NumericTextBox2" PreviewTextInput="NumericTextEntry" DataObject.Pasting="NumericTextPasting" />

        </Grid>
        
</Window>
